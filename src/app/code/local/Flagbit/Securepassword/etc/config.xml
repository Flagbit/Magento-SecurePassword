<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Flagbit_Securepassword>
			<version>0.3.0</version>
		</Flagbit_Securepassword>
	</modules>
	
	<global>
		<blocks>
            <securepassword>
                <class>Flagbit_Securepassword_Block</class>
            </securepassword>
        </blocks>
        <helpers>
        	<securepassword>
        		<class>Flagbit_Securepassword_Helper</class>
        	</securepassword>
        </helpers>
        <models>
        	<securepassword>
        		<class>Flagbit_Securepassword_Model</class>
        		<resourceModel>securepassword_entity</resourceModel>
        	</securepassword>
            <securepassword_entity>
                <class>Flagbit_Securepassword_Model_Entity</class>
                <entities>
                    <entity>
                        <table>customer_entity</table>
                    </entity>
                </entities>             
            </securepassword_entity>
        </models>        
        <resources>
            <securepassword_setup>
                <setup>
                    <module>Flagbit_Securepassword</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </securepassword_setup>
        </resources>
        <template>
            <email>
                <customer_password_forgot_email_template translate="label" module="customer">
                    <label>New password</label>
                    <file>securepassword_new.html</file>
                    <type>html</type>
                </customer_password_forgot_email_template>
            </email>
        </template>
	</global>
	
	<frontend>
        <routers>
            <customer>
            	<args>
            		<modules>
            			<Flagbit_Securepassword before="Mage_Customer_AccountController">Flagbit_Securepassword_Frontend_Customer</Flagbit_Securepassword>
            		</modules>
            	</args>
            </customer>
            <securepassword>
                <use>standard</use>
                <args>
                    <module>Flagbit_Securepassword</module>
                    <frontName>securepassword</frontName>
                </args>
            </securepassword>
        </routers>
        <layout>
          	<updates>
              <securepassword>
                  <file>securepassword.xml</file>
              </securepassword>
          	</updates>
      </layout>
      <translate>
           <modules>
               <securepassword>
                   <files>
                       <default>Flagbit_Securepassword.csv</default>
                   </files>
               </securepassword>
           </modules>
       </translate>
    </frontend>

    <default>
    	<securepassword>
    		<general>
    			<timeout>90000</timeout>
    		</general>
    	</securepassword>
    </default>
    
</config>